<h1>Edit <%=link_to @merchant.name, "/merchants/#{@merchant.id}" %></h1>

<center>
  <%= form_tag "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch do %>

  <%= label_tag :name %>
  <%= text_field_tag :name, @item.name.nil? ? '' : @item.name %>

  <%= label_tag :description %>
  <%= text_field_tag :description, @item.description.nil? ? '' : @item.description %>

  <%= label_tag :price %>
  <%= text_field_tag :price, @item.price.nil? ? '' : @item.price %>

  <%= label_tag :image %>
  <%= text_field_tag :image, @item.image.nil? ? '' : @item.image  %>

  <%= label_tag :inventory %>
  <%= text_field_tag :inventory, @item.inventory.nil? ? '' : @item.inventory  %>

  <%= submit_tag 'Update Item' %>
  <% end %>
</center>
