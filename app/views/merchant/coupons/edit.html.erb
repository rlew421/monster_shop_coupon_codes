<%= form_tag '/merchant/coupons', method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @coupon.name %>

  <%= label_tag :code %>
  <%= text_field_tag :code, @coupon.code %>

  <%= label_tag :percentage_off %>
  <%= text_field_tag :percentage_off, @coupon.percentage_off %>

  <%= submit_tag "Update Coupon" %>
<% end %>
